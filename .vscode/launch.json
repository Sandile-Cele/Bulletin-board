{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },

    {
      "type": "node-terminal",
      "name": "node Server",
      "request": "launch",
      "command": "npm run start:server",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "ng Serve",
      "request": "launch",
      "command": "npm run serve",
      "cwd": "${workspaceFolder}"
    }
  ]
}


