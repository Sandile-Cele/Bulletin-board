{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "1) Node Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start:server",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "2) Ng Serve",
      "type": "node-terminal",
      "request": "launch",
      "command": "ng serve --ssl true --ssl-cert \"Keys\\certificate.pem\" --ssl-key \"Keys\\privatekey.pem\" ",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "3) Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "---Built in---"
    }
  ]
}
